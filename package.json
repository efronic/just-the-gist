{
  "name": "justthegist",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Just the Gist: summarize the current page/video with LLMs.",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "node scripts/build.mjs",
    "watch": "node scripts/build.mjs --watch",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "browserslist:update": "npx update-browserslist-db@latest",
    "postinstall": "npm run browserslist:update || true"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.270",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "browserslist": "^4.23.0",
    "daisyui": "^4.12.10",
    "esbuild": "^0.21.5",
    "eslint": "^9.9.0",
    "prettier": "^3.3.3",
    "sass": "^1.77.0",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.4.5"
  },
  "browserslist": {
    "production": [
      "Chrome >= 114",
      "Edge >= 114"
    ],
    "development": [
      "last 1 Chrome version",
      "last 1 Edge version"
    ]
  }
}
